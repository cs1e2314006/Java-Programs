package AbstractClasses;

public class AbstractExample {

    // Abstract inner class
    abstract class AbstractDemo {
        abstract void add();
        abstract void sub();
        abstract void mul();
    }

    // Concrete subclass implementing abstract methods
    class AbImplement extends AbstractDemo {
        void add() {
            System.out.println("Adding");
        }

        void sub() {
            System.out.println("Subtracting");
        }

        void mul() {
            System.out.println("Multiplying");
        }
    }

    public static void main(String[] args) {
        System.out.println("It is an abstract class");

        // Create an object of the outer class
        AbstractExample outer = new AbstractExample();

        // Use the outer class to instantiate the inner class
        AbstractExample.AbImplement a1 = outer.new AbImplement();

        // Call the implemented methods
        a1.add();
        a1.sub();
        a1.mul();
    }
}
